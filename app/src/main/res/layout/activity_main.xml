<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sk.rsa.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:text="private key"
                android:layout_height="match_parent"
                android:id="@+id/privateKeyTextView"
                android:textSize="23sp"
                android:layout_width="110dp" />

            <EditText
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/privateKeyEditText" />

            <TextView
                android:text="public key"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:id="@+id/publicKeyTextView"
                android:textSize="24sp"
                android:autoText="false" />

            <EditText
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/publicKeyEditText" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
        <TextView
        android:text="N"
        android:layout_height="match_parent"
        android:id="@+id/textViewN"
        android:textSize="24sp"
            android:layout_width="110dp" />

            <EditText
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editNText" />

        <TextView
            android:text="Siglature"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:id="@+id/digitalSiglature"
            android:textSize="24sp"
            android:autoText="false" />

        <EditText
            android:layout_height="match_parent"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextDigitalSignature"
            android:layout_width="80dp" />
    </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_weight="0.99">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/editBeginerText"
                android:layout_weight="1" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ChangeText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:id="@+id/textVievEncryptedText" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="43dp">

            <Button
                android:text="Encrypt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonEncrypt"
                android:layout_weight="1" />

            <Button
                android:text="Decrypt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonDecrypt"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="43dp">


            <Button
                android:text="Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/buttonCheckSignature" />

            <EditText
                android:layout_width="139dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editText2Signature"
                android:layout_weight="0.27" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
