<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:text="private key"
            android:layout_height="match_parent"
            android:id="@+id/privateKeyTextView"
            android:textSize="20sp"
            android:layout_width="110dp" />

        <EditText
            android:layout_width="69dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/privateKeyEditText" />

        <TextView
            android:text="public key"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/publicKeyTextView"
            android:textSize="20sp"
            android:autoText="false" />

        <EditText
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/publicKeyEditText" />

        <TextView
            android:text="N"
            android:layout_height="match_parent"
            android:id="@+id/textViewN"
            android:textSize="20sp"
            android:layout_width="32dp" />

        <EditText
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editNText" />

        <TextView
            android:text="Siglature"
            android:layout_width="86dp"
            android:layout_height="match_parent"
            android:id="@+id/digitalSiglature"
            android:textSize="20sp"
            android:autoText="false" />

        <EditText
            android:layout_height="match_parent"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextDigitalSignature"
            android:layout_width="match_parent" />
    </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="0.99">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/editBeginerText"
                android:layout_weight="1" />

            <Button
                android:text=""
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:id="@+id/ChangeText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/textVievEncryptedText"
                android:layout_weight="1" />

        </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <Button
                android:text="Encrypt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonEncrypt"
                android:layout_weight="1" />

            <Button
                android:text="Decrypt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonDecrypt"
                android:layout_weight="1" />

        <Button
            android:text="check Signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonCheckSignature"
            android:layout_weight="0.32" />

        <EditText
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText2Signature" />
    </LinearLayout>

    </LinearLayout>
